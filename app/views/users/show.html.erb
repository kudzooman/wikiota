<div class="page-heading">
    <h2>List of <%= @user.name %> Wikiotas</h2>
</div>

<table class="table">
   <thead>
      <tr>
         <th>Article</th>
         <th>Contributor</th>
         <th colspan="2">Edit/Delete</th>
      </tr>
   </thead>
   <tbody>
    <% @articles.each do |article| %>
      <tr>
         <td><%= article.title %></td>
         <td>Cont1</td>
         <td>
            <%= link_to "Edit", edit_article_path(article), class: 'btn btn-warning' %>
            <%= link_to "Vaporize!", @article, method: :delete, class: 'btn btn-danger', data: { confirm: 'Final answer? Cause this topic is about to be real gone.'} %>
         </td>
      </tr>
    <% end %>
   </tbody>
</table>