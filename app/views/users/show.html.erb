<div class="page-heading">
    <h2>List of <%= @user.name %>'s Wikiotas</h2>
</div>

<div>
  <% if policy(Article.new).create? %>
          <%= link_to "New Wikiota Wiki", new_article_path, class: "btn btn-warning" %>
  <% end %>
</div>

<table class="table table-striped table-bordered">
   <thead>
      <tr>
         <th>Article/s</th>
         <th>Contributor/s</th>
         <th colspan="2">Edit/Delete</th>
      </tr>
   </thead>
   <tbody>
    <% @articles.each do |article| %>
      <tr>
         <td><%= link_to article.title, article %></td>
         <td><%= article.contributors.name %></td>
         <td>
            <%= link_to "Edit", edit_article_path(article), class: 'btn btn-warning' %>
            <%= link_to "Vaporize!", article, method: :delete, class: 'btn btn-danger', data: { confirm: 'Final answer? Cause this topic is about to be real gone.'} %>
         </td>
      </tr>
    <% end %>
   </tbody>
</table>