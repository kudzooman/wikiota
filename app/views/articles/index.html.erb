

<div class="page-heading">
  <h2>List of Wikiotas</h2>
</div>
<div class="pages">
  <%= will_paginate @articles %>
</div>
<div>
  <% if policy(Article.new).create? %>
          <%= link_to "New Wikiota Wiki", new_article_path, class: "btn btn-warning" %>
  <% end %>
</div>

<table class="table table-striped table-bordered">
   <thead>
      <tr>
         <th>Articles</th>
         <th>Contributors</th>
         <th colspan="2">Edit/Delete</th>
      </tr>
   </thead>
   <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article %></td>
        <td><%= article.contributors.name %></td>
        <td>
          <% if policy(article).edit? %>
            <%= link_to "Edit", edit_article_path(article), class: 'btn btn-warning' %>
            <% end %>
          <% if policy(article).destroy? %>
            <%= link_to "Vaporize Wiki", article, method: :delete, class: 'btn btn-danger', data: { confirm: 'Final answer? Cause this topic is about to be real gone.'} %>
            <% end %>
        </td>
      </tr>
  <% end %>
</tbody>
</table>
  <div class="pages">
  <%= will_paginate @articles %>
</div>


  

