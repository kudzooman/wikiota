<h1>List of Wikiotas</h1>
  <% if policy(Article.new).create? %>
    <%= link_to "New Wikiota Article", new_article_path, class: 'btn btn-success' %>
  <% end %>
  <% @articles.each do |article| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <p><%= link_to article.title, article %></p>
        </h4>
      </div>
    </div>

  <% end %>
