<div class="col-md-12">
  <%= form_for @article do |f| %>
    <div class="form-group">
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter title of wikiota article" %>
    </div>
      <div class="form-group">
        <%= f.text_area :body, rows: 20, class: 'form-control', placeholder: "Start writing wikiota article here." %>
      </div>
      <div class="form-group">
        <%= f.submit "Save Wikiota", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
